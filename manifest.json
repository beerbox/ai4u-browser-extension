{
    "manifest_version": 3,
    "name": "ai4u",
    "version": "1.0",
    "description": "Summarizes the content of the current page using a local Ollama server.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "host_permissions": [
      "http://localhost:11434/"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "commands": {
        "_execute_action": {
          "suggested_key": {
            "default": "Alt+Shift+S"
          },
          "description": "Activate the Summarizer Popup"
        }
      }
  }